<div class="container">
  <div class="col-md-7 mx-md-auto mt-5 mb-5">
    <div class="card shadow">
      <div class="card-header">
        <h2 class="card-title text-center">Change your password</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>
          
          <div class="form-group">
            <%= f.label :password, "New password" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "Confirm new password" %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
          </div>

          <div class="form-group">
            <%= f.submit "Change my password", class: 'btn btn-primary btn-block btn-lg' %>
          </div>
        <% end %>
        <div class="text-center mt-3">
          <%= link_to "Sign In", new_session_path(resource_name) %> | 
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>
