<div class="container">
  <div class="col-md-7 mx-md-auto mt-5 mb-5">
    <div class="card shadow">
      <div class="card-header">
        <h2 class="card-title text-center">Forget password?</h2>
      </div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "users/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: 'btn btn-primary btn-block btn-lg' %>
          </div>
        <% end %>
        <div class="text-center mt-3">
          <%= link_to "Sign In", new_session_path(resource_name) %> | 
          <%= link_to "Sign up", new_registration_path(resource_name) %>
        </div>
      </div>
    </div>
  </div>
</div>
